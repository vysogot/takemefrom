<!DOCTYPE html>
<html>
  <head>
    <title><%= @game.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_pack_tag 'game_editor' %>
  </head>
  <body>
    <div id="editor"
         data-elements="<%= @elements.to_json %>"
         data-beginning-id="<%= @beginning_id %>"
         data-cy-options="<%= @cy_options.to_json %>"
         data-touched=<%= @game.touched? %>
         >
    </div>
  </body>
</html>
