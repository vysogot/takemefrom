<h1 id="title">Take me from</h1>
<p>Take me from one place to another</p>

<% if @game %>
  <p class="choice"><%= link_to 'Play', place_path(@game.beginning) %></p>
<% end %>
<% if current_user %>
  <p class="choice"><%= link_to 'Your games', games_path %></p>
  <p class="choice"><%= link_to "Log out", destroy_user_session_path, method: :delete %>
<% else %>
  <p class="choice"><%= link_to "Log in", new_user_session_path %>
<% end %>
<p id="contribute">
  <a href="http://github.com/vysogot/takemefrom">Contribute</a>
</p>
