<p id="content"><%= @content %></p>

<%= for choice <- @choices do %>
  <p class="choice">
    <%= link choice["content"], to: Routes.play_path(@conn, :show, @game.id, choice: choice["target"]) %>
  </p>
<% end %>

<p class="choice">
  <% if dead_end?(@choices) do %>
  There is nothing you can do here.
  <% end %>

  <%= link 'Go back', to: {:javascript, "history.back()"} %>
</p>

<p id="editPlace">
  <%= link 'Redesign this place', to: Routes.game_path(@conn, :edit, @game.id) %>
</p>
